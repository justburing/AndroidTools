<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/border_linear_radius1"
    android:layout_width="250dp"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:padding="20dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/title"
            android:padding="10dp"
            android:textSize="18sp"
            android:textColor="@color/grey900"
            android:text="确认完成？"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/content"
            android:padding="10dp"
            android:text="完成后将无法修改"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <View
        android:background="@color/grey400"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="36dp">
        <Button
            android:id="@+id/no"
            android:text="取消"
            android:textColor="@color/color_text2"
            android:background="@drawable/left_bottom_circle_corner"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <View
            android:background="@color/grey400"
            android:layout_width="1px"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/yes"
            android:text="确定"
            android:textColor="@color/color_text2"
            android:background="@drawable/right_bottom_circle_corner"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>